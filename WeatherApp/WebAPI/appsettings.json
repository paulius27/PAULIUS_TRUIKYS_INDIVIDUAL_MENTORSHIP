{
    "ConnectionStrings": {
        "Default": "Data Source=(LocalDb)\\MSSQLLocalDB;Initial Catalog=WeatherDb;Integrated Security=SSPI"
    },
    "IdentityServer": {
        "Authority": "https://localhost:7142"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information"
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "log.log",
                    "rollingInterval": "Day",
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
                }
            }
        ]
    },
    "AllowedHosts": "*",
    "WeatherForecast": {
        "MinDays": 1,
        "MaxDays": 7
    },
    "FindMaxTemperature": {
        "ShowDebugInfo": false,
        "TimeoutMs": 5000
    },
    "WeatherHistory": {
        "Cities": [
            {
                "Name": "London",
                "TimerSec": 30
            },
            {
                "Name": "Paris",
                "TimerSec": 30
            },
            {
                "Name": "Miami",
                "TimerSec": 45
            }
        ]
    }
}
