{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "WeatherForecast": {
        "MinDays": 1,
        "MaxDays": 7
    },
    "FindMaxTemperature": {
        "ShowDebugInfo": false,
        "TimeoutMs": 5000
    },
    "WeatherHistory": {
        "Cities": [
            {
                "Name": "London",
                "TimerSec": 30
            },
            {
                "Name": "Paris",
                "TimerSec": 30
            },
            {
                "Name": "Miami",
                "TimerSec": 45
            }
        ]
    }
}
